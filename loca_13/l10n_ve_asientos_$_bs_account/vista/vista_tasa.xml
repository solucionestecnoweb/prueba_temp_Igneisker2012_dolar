              <p class="oe_view_nocontent_create">

              </p><p>

              </p>
            </field>
      </record>

    <menuitem
    id="registar_tasa"
    name="Registrar Tasa" 
    parent="point_of_sale.menu_point_of_sale"
    action="tasa_menu"
    sequence="10"/><!--parent="point_of_sale.menu_point_of_sale"-->
 

